{% extends 'base.html.twig' %}

{% block body %}
    <h1>Post list</h1>

    <p>Il y a {{ posts | length }} articles</p>
    <p>{{ 'post.list.count' | trans({'%nombre%': posts | length}) }}</p>
    <p>{{ 'post.list.count2' | transchoice(posts | length, {'%nombre%': posts | length}) }}</p>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'post.field.title' | trans }}</th>
                <th>Body</th>
                <th>Publishedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('post_show', { 'slug': post.slug }) }}">{{ post.id }}</a></td>
                <td>{{ post.title }}</td>
                <td>{{ post.body }}</td>
                <td>{{ post.publishedAt | date("h:i:s") }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('post_show', { 'slug': post.slug }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('post_edit', { 'slug': post.slug }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('post_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
